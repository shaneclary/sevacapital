{
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/seva", "destination": "/seva.html" },
    { "source": "/pitch", "destination": "/pitch.html" },
    { "source": "/investor", "destination": "/investor_portal.html" },
    { "source": "/projectweaver", "destination": "/projectweaver.html" },
    { "source": "/icma", "destination": "/icma.html" },
    { "source": "/gisd", "destination": "/gisd-compliance.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ]
}
